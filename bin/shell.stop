# Set Java App Name and execution path
export APP_NAME="Batch"
export APP_HOME="${HOME}/Batch"

# libraries
. ${APP_HOME}/vendor/unix-commons.lib
. ${APP_HOME}/vendor/java-commons.lib

java_set_environment
java_set_timezone
java_set_policy
java_build_classpath "jars.list"
java_set_version "java16"
java_show_properties

# Sending signal
java_class_stop
sleep 5

# Server Process
java_jar_stop
sleep 5

