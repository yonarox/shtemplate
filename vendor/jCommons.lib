  echo "java ${JAVA_FLAGS} -cp ${CLASSPATH} ${JAVA_MAINCLASS} ${CMD}" 
  #java ${JAVA_FLAGS} -cp ${CLASSPATH} ${JAVA_MAINCLASS} ${CMD} 2>&1 &
  echo $! > ${APP_HOME}/${APP_NAME}-cls.lck

}

#
function jUnloadCLASSProcess 
